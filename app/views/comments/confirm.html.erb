<html>
  <header>
    <h2>つぶやき内容 確認画面</h2>
    <p>下記の内容で登録されます。</p>
  </header>
  <body>
    <%= form_with(model: @comment, local: true) do |form| %>
    <div class="field_form">
      <div>
        <%= form.hidden_field :"つぶやき内容"%>
      </div>
      <div>
        <%= form.hidden_field :content %>
      </div>
    </div>
    <table>
      <tr>
        <th>つぶやき内容</th>
      </tr>
      <tr>
        <td><%= @comment.content %></td>
      </tr>
    </table>

    <div>
      <%= form.submit %>
    </div>
    <div>
      <%= form.submit "戻る", name: 'back' %>
    </div>
    <div>
      <%= link_to "つぶやき一覧へ", comments_path %>      
    </div>
    <% end %>
  </body>
  <footer>

  </footer>
</html>
